<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="3.1">
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>XSSFilter</filter-name>
    <filter-class>egov.linkpay.ims.common.filter.XSSFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XSSFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>csrfFilter</filter-name>
    <filter-class>egov.linkpay.ims.common.filter.CSRFFilter</filter-class>
    <init-param>
      <param-name>strCSRFTokenName</param-name>
      <param-value>IMSRequestVerificationToken</param-value>
    </init-param>
    <init-param>
      <param-name>exclude</param-name>
      <param-value>/logInPasswordChangeProc.do,/logInCheckIsEmptySession.do,/logInGetSessionCsrfToken.do,/logInSessionLanguage.do,/home/dashboard/selectDashBoardSummary.do,/businessMgmt/archivesMgmt/insertArchivesMgmtForIE.do,/businessMgmt/archivesMgmt/updateArchivesMgmtForIE.do</param-value>
    </init-param>
    <init-param>
      <param-name>excludeGET</param-name>
      <param-value>/logInPasswordChangeProc.do,/logInCheckIsEmptySession.do,/logInGetSessionCsrfToken.do,/logInSessionLanguage.do,/home/dashboard/selectDashBoardSummary.do,/businessMgmt/archivesMgmt/insertArchivesMgmtForIE.do,/businessMgmt/archivesMgmt/updateArchivesMgmtForIE.do</param-value>
    </init-param>
    <init-param>
      <param-name>excludeGETStartWith</param-name>
      <param-value>/IONPay/,/Bootstrap/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>csrfFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AjaxSesssionExpirationFilter</filter-name>
    <filter-class>egov.linkpay.ims.common.filter.AjaxSesssionExpirationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AjaxSesssionExpirationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/*-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:config/spring/context-*.xml</param-value>
  </context-param>
  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  <error-page>
    <error-code>404</error-code>
    <location>/error/error404.do</location>
  </error-page>
</web-app>